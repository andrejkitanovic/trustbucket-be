{
	"name": "trustbucket-backend",
	"version": "1.0.0",
	"description": "Trustbucket Backend",
	"main": "app.ts",
	"scripts": {
		"prepare": "npx husky install",
		"start:dev": "ts-node ./src/app.ts",
		"start": "node ./dist/app.js",
		"watch": "nodemon ./src/app.ts",
		"build": "tsc && npm run copy-email-templates",
		"postinstall": "tsc",
		"test": "jest --passWithNoTests",
		"format:check": "prettier --check ./src/**/*.ts",
		"format:write": "prettier --write ./src/**/*.ts",
		"lint:check": "eslint ./src/**/*.ts",
		"lint:fix": "eslint --fix ./src/**/*.ts",
		"sync-sort-translations": "ts-node ./src/utils/locales/syncSortTranslations.ts",
		"validate-translations": "ts-node src/utils/locales/translationsValidator.ts",
		"copy-email-templates": "cp -r ./src/utils/mailer/templates ./dist/utils/mailer"
	},
	"author": "Andrej Kitanovic",
	"license": "ISC",
	"dependencies": {
		"axios": "^0.27.2",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dayjs": "^1.11.3",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-form-data": "^2.0.14",
		"express-validator": "^6.14.1",
		"html-pdf": "^3.0.1",
		"jade": "^1.11.0",
		"jsonwebtoken": "^8.5.1",
		"module-alias": "^2.2.2",
		"mongodb-memory-server": "^8.6.0",
		"mongoose": "^6.3.5",
		"mongoose-find-by-reference": "^1.0.3",
		"multer": "^1.4.5-lts.1",
		"node-mailjet": "^3.4.1",
		"node-schedule": "^2.1.0",
		"request-promise": "^4.2.6",
		"require-dir": "^1.2.0",
		"stripe": "^10.0.0",
		"swagger-jsdoc": "^6.2.1",
		"swagger-ui-express": "^4.4.0",
		"utf8": "^3.0.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.18.2",
		"@babel/preset-typescript": "^7.17.12",
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/html-pdf": "^3.0.0",
		"@types/i18n": "^0.13.3",
		"@types/jade": "0.0.31",
		"@types/jest": "^28.1.1",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/module-alias": "^2.0.1",
		"@types/multer": "^1.4.7",
		"@types/node": "^17.0.40",
		"@types/node-mailjet": "^3.3.9",
		"@types/node-schedule": "^2.1.0",
		"@types/request-promise": "^4.1.48",
		"@types/require-dir": "^1.0.2",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/utf8": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "^13.0.0",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"ts-node": "^10.8.1",
		"typescript": "^4.7.3"
	}
}
